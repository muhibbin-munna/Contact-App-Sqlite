<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactDetailsActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:elevation="4dp" />

        <LinearLayout
            android:id="@+id/firstLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_top"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/ppCardView"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:focusableInTouchMode="true"
                android:shape="ring"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/contactImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/pp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="end"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/editTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/ic_pen" />

                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="25dp"
                        android:gravity="center"
                        android:hint="Name"

                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="25dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/phoneTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"

                            android:gravity="center"
                            android:hint="Phone Number"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/genderTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"

                            android:gravity="center"
                            android:hint="Gender"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/ageTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"

                            android:gravity="center"
                            android:hint="Age"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/addressLine1Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="25dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="Address 1"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/addressLine2Tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="25dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:hint="Address 2"
                        android:padding="5dp"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cityTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"

                            android:gravity="right"
                            android:hint="City"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/postCodeTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:hint="Postcode"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/remarkTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="25dp"
                        android:gravity="center"
                        android:hint="Remark"
                        android:textSize="15sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/secondRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/firstLL"

            android:layout_marginTop="15dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/remarkRV"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_below="@+id/event1Tv"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/event1Tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/event2Tv"
                android:gravity="center"
                android:padding="2dp"
                android:text="Event 1"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/event2Tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                android:gravity="center"
                android:padding="2dp"
                android:text="Event 2"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/event3Tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/event2Tv"

                android:gravity="center"
                android:padding="2dp"
                android:text="Event 3"
                android:textSize="17sp" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>

